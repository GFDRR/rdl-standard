				},
				"media_type": {
					"title": "Media type",
					"type": "string",
					"description": "The media type of the resource taken from the [IANA Media Types codelist](https://www.iana.org/assignments/media-types/media-types.xhtml). For example a custom binary file has media_type 'application/octet-stream. A geojson file has the media_type 'application/geo+json'."	
				},
				"spatial_resolution": {
					"title": "Spatial resolution",
					"type": "number",
					"description": "The minimum spatial separation resolvable in the resource, measured in meters."
				},
				"coordinate_system": {
					"title": "Reference coordinate system",
					"type": "string",
					"description": "The reference co-ordinate system of the dataset version, using the [EPSG codelist](https://epsg.org)."
				},
				"url": {
					"title": "Url",
					"type": "string",
					"description": "The web address the dataset version can be downloaded from.",
					"format": "iri"
