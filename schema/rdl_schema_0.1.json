			"type": "string",
			"enum": [
				"Individual items",
				"Aggregated to grid",
				"Aggregated to boundaries",
				"N/A"
			]
		},
		"common_analysis_type": {
			"type": "string",
			"enum": [
				"Deterministic",
				"Probabilistic"
			]
		},
		"common_calc_method": {
			"type": "string",
